<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
    <!-- Звичайні іконки (для старих версій Android) -->
    <icon density="mdpi" src="www/img/icon-background.png" />
    <!-- ... -->

    <!-- Адаптивні іконки (для Android 8.0+) -->
    <icon src="icon.png" foreground="www/img/icon-foreground.png" background="www/img/icon-background.png" />
</platform>

</widget>

